{
  "manifest_version": 3,
  "name": "Generative Personality Side Panel",
  "version": "0.1.0",
  "description": "Configure prompt/personality and inject profile headers for a generative Cloudflare proxy.",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage",
    "sidePanel",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Generative Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
